<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/table.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user: user }) %>
    <main>
      <h1>All Events</h1>
      <div class="top-controls">
        <a href="/events/new" class="new-item-button">
          <span class="plus-icon">+</span>
          Create New Event
        </a>
      </div>
      <table>
        <thead>
          <tr>
            <th>Event ID</th>
            <th>Name</th>
            <th>City</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Traffic Factor</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach((event) => { %>
          <tr>
            <td><%= event.event_id %></td>
            <td><%= event.event_name %></td>
            <td><%= event.location_city %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= event.expected_additional_traffic_factor %></td>
            <td>
              <a href="/events/<%= event.event_id %>/edit">Edit</a>
              <form
                action="/events/<%= event.event_id %>?_method=DELETE"
                method="POST"
              >
                <button
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this slot?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </main>
  </body>
</html>
