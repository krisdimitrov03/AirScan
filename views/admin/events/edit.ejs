<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body>
    <%- include('../../partials/navbar', { user: user }) %>

    <div class="form-container">
      <h1 class="text-center"><%= title %></h1>

      <% if (error) { %>
      <div class="error-message"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/events/<%= event.event_id %>/edit">
        <div class="form-group">
          <label>Event Name:</label>
          <input
            type="text"
            name="event_name"
            value="<%= event.event_name %>"
            required
          />
        </div>

        <div class="form-group">
          <label>City:</label>
          <input
            type="text"
            name="location_city"
            value="<%= event.location_city %>"
          />
        </div>

        <div class="form-group">
          <label>Start Date:</label>
          <input
            type="date"
            name="start_date"
            value="<%= event.start_date %>"
            required
          />
        </div>

        <div class="form-group">
          <label>End Date:</label>
          <input
            type="date"
            name="end_date"
            value="<%= event.end_date %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Expected Additional Traffic Factor:</label>
          <input
            type="number"
            step="0.01"
            name="expected_additional_traffic_factor"
            value="<%= event.expected_additional_traffic_factor %>"
          />
        </div>

        <button type="submit">Update Event</button>
      </form>

      <p class="text-center">
        <a class="back-link" href="/admin/events">Back to Events</a>
      </p>
    </div>
  </body>
</html>
