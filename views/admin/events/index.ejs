<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/table.css" />
  </head>
  <body>
    <%- include('../../partials/navbar', { user: user }) %>

    <main>
      <h1><%= title %></h1>

      <!-- Top Controls -->
      <div class="top-controls">
        <a href="/admin/events/new" class="new-item-button">
          <span class="plus-icon">+</span>
          Create New Event
        </a>
        <form method="GET" action="/admin/events" class="search-form">
          <input
            type="text"
            name="search"
            placeholder="Search events..."
            value="<%= search %>"
          />
          <button type="submit">Search</button>
        </form>
      </div>

      <table>
        <thead>
          <tr>
            <th>Event ID</th>
            <th>Event Name</th>
            <th>City</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Traffic Factor</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { %>
          <tr>
            <td><%= event.event_id %></td>
            <td><%= event.event_name %></td>
            <td><%= event.location_city %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= event.expected_additional_traffic_factor %></td>
            <td>
              <a href="/admin/events/<%= event.event_id %>/edit">Edit</a>
              <form
                method="POST"
                action="/admin/events/<%= event.event_id %>/delete"
                style="display: inline"
              >
                <button
                  type="submit"
                  onclick="return confirm('Delete this event?')"
                >
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <% if (totalPages > 1) { %>
      <div class="pagination">
        <% for (let p = 1; p <= totalPages; p++) { %> <% if (p === currentPage)
        { %>
        <strong><%= p %></strong>
        <% } else { %>
        <a href="?page=<%= p %>&search=<%= search %>"><%= p %></a>
        <% } %> <% } %>
      </div>
      <% } %>
    </main>
  </body>
</html>
