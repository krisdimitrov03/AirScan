<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body>
    <%- include('../../partials/navbar', { user: user }) %>

    <div class="form-container">
      <h1 class="text-center"><%= title %></h1>

      <% if (error) { %>
      <div class="error-message"><%= error %></div>
      <% } %>

      <form
        method="POST"
        action="/admin/airport-slots/<%= slot.slot_id %>?_method=PUT"
      >
        <div class="form-group">
          <label>Airport Code:</label>
          <input
            type="text"
            name="airport_code"
            value="<%= slot.airport_code %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Date:</label>
          <input type="date" name="date" value="<%= slot.date %>" required />
        </div>

        <div class="form-group">
          <label>Start Time:</label>
          <input
            type="time"
            name="time_slot_start"
            value="<%= slot.time_slot_start %>"
            required
          />
        </div>

        <div class="form-group">
          <label>End Time:</label>
          <input
            type="time"
            name="time_slot_end"
            value="<%= slot.time_slot_end %>"
            required
          />
        </div>

        <div class="form-group">
          <label>Slot Capacity:</label>
          <input
            type="number"
            name="slot_capacity"
            min="1"
            value="<%= slot.slot_capacity %>"
            required
          />
        </div>

        <button type="submit">Update Slot</button>
      </form>

      <p class="text-center">
        <a class="back-link" href="/admin/airport-slots">Back to Slots</a>
      </p>
    </div>
  </body>
</html>
