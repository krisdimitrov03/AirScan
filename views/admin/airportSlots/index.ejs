<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <form method="GET" action="/admin/airport-slots">
    <input type="text" name="search" placeholder="Search by code/date..." value="<%= search %>">
    <button type="submit">Search</button>
  </form>

  <p><a href="/admin/airport-slots/new">Create New Slot</a></p>

  <table border="1">
    <thead>
      <tr>
        <th>Slot ID</th>
        <th>Airport Code</th>
        <th>Date</th>
        <th>Start Time</th>
        <th>End Time</th>
        <th>Capacity</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% slots.forEach(slot => { %>
        <tr>
          <td><%= slot.slot_id %></td>
          <td><%= slot.airport_code %></td>
          <td><%= slot.date %></td>
          <td><%= slot.time_slot_start %></td>
          <td><%= slot.time_slot_end %></td>
          <td><%= slot.slot_capacity %></td>
          <td>
            <a href="/admin/airport-slots/<%= slot.slot_id %>/edit">Edit</a>
            <form method="POST" action="/admin/airport-slots/<%= slot.slot_id %>/delete" style="display:inline">
              <button type="submit" onclick="return confirm('Delete this slot?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <% if (totalPages > 1) { %>
    <div>
      <% for (let p = 1; p <= totalPages; p++) { %>
        <% if (p === currentPage) { %>
          <strong><%= p %></strong>
        <% } else { %>
          <a href="?page=<%= p %>&search=<%= search %>"><%= p %></a>
        <% } %>
      <% } %>
    </div>
  <% } %>
</body>
</html>
