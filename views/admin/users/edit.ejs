<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/form.css" />
  </head>
  <body>
    <%- include('../../partials/navbar', { user: auth_user }) %>

    <div class="form-container">
      <h1 class="text-center"><%= title %> (#<%= user.user_id %>)</h1>

      <% if (error) { %>
      <div class="error-message"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/users/<%= user.user_id %>?_method=PUT">
        <div class="form-group">
          <label>Username:</label>
          <input
            type="text"
            name="username"
            value="<%= user.username %>"
            required
          />
        </div>
        <div class="form-group">
          <label>Password (leave blank to remain unchanged):</label>
          <input type="password" name="password" />
        </div>
        <div class="form-group">
          <label>Email:</label>
          <input type="email" name="email" value="<%= user.email %>" required />
        </div>
        <div class="form-group">
          <label>Role ID:</label>
          <input
            type="number"
            name="role_id"
            value="<%= user.role_id %>"
            required
          />
        </div>
        <button type="submit">Save</button>
      </form>
    </div>
  </body>
</html>
