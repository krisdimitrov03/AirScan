<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Create New Pricing</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar', { user: user }) %>

    <h1>Create New Pricing</h1>

    <% if (error) { %>
    <p style="color: red"><%= error %></p>
    <% } %>

    <form action="/pricing" method="POST">
      <label for="flight_id">Flight:</label>
      <select name="flight_id" id="flight_id" required>
        <option value="" disabled selected>Select a flight</option>
        <% flights.forEach((flight) => { %>
        <option value="<%= flight.flight_id %>">
          <%= flight.flight_number %>: <%= flight.origin_airport_code %> - <%=
          flight.destination_airport_code %>
        </option>
        <% }) %>
      </select>
      <br /><br />

      <label for="effective_date_range_start">Effective Start Date:</label>
      <input
        type="date"
        name="effective_date_range_start"
        id="effective_date_range_start"
        required
      /><br /><br />

      <label for="effective_date_range_end">Effective End Date:</label>
      <input
        type="date"
        name="effective_date_range_end"
        id="effective_date_range_end"
        required
      /><br /><br />

      <label for="base_price">Base Price:</label>
      <input
        type="number"
        step="0.01"
        name="base_price"
        id="base_price"
        placeholder="e.g., 129.99"
      /><br /><br />

      <label for="discounts_offered">Discounts Offered:</label>
      <input
        type="number"
        step="0.01"
        name="discounts_offered"
        id="discounts_offered"
        placeholder="e.g., 10.00"
      /><br /><br />

      <label for="peak_season_surcharge">Peak Season Surcharge:</label>
      <input
        type="number"
        step="0.01"
        name="peak_season_surcharge"
        id="peak_season_surcharge"
        placeholder="e.g., 30.00"
      /><br /><br />

      <button type="submit">Save</button>
    </form>

    <hr />
    <a href="/pricing">Back to Pricing List</a>
  </body>
</html>
